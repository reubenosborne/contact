body
	font-family helvetica
	color rgba(48, 77, 111, 1)
	user-select none
	overflow hidden

.app-container
	display flex
	flex-direction row
	height 100vh
	
// ====================================================
// ================= Panel Styling ====================
// ====================================================

// Filter Panel

.panel-filters
	flex 1
	display flex
	flex-direction column
	border-right 1px solid rgba(0,0,0,.1)
	
.panel-filters-container
	flex 1
	
.panel-filters-control
	display flex
	align-items center
	justify-content center
	padding 20px
	
// Contact Panel
	
.panel-contacts
	flex 1
	display flex
	flex-direction column
	border-right 1px solid rgba(0,0,0,.1)
	
.panel-contacts-container
	overflow scroll
	overflow-x hidden
	flex 1

// Info Panel

.panel-info
	flex 2
	
.panel-info-container
	padding 1em
	
	
// ====================================================
// ================== Panel Header ====================
// ====================================================

.panel-header
	min-height 25px
	width 100%
	background rgba(60, 130, 205, 1)
	
	display flex
	align-items center
	
	h1
		padding 5px
		margin 0
		font-size 12px
		color white
		-webkit-font-smoothing antialiased
		

// ====================================================
// ================= Search Contacts ==================
// ====================================================

.search-contacts
	min-height 50px
	display flex
	align-items center
	background white
	border-bottom 1px solid rgba(0,0,0,.05)
	
	input
		width 100%
		height 30px
		padding 0 10px
		margin 0 10px
		border 1px solid #CCC
		border-radius 20px
		transition .5s
		
		&:focus
			outline 0px
			border 1px solid #999


// ====================================================
// =================== Contact Card ===================
// ====================================================

.contact-card
	cursor pointer
	padding 0 5px
	margin 0
	background white
	height 50px
	border-bottom 1px solid rgba(0,0,0,.05)
	
	display flex
	align-items center
	
	&:hover
		background rgba(0,0,0,.03)
		
.contact-card-avatar
	min-width 40px
	height 40px
	background #EEE
	border-radius 50%
	margin 0 10px 0 5px
	
	display flex
	align-items center
	justify-content center

.contact-card-details
	display flex
	flex-direction column

	h3
		font-size 16px
		padding 2px 0
		margin 0
	
	p
		padding 0
		margin 0
		font-size 12px
		font-weight 300



// ====================================================
// =============== Contact Controllers ================
// ====================================================

.contact-control
	width 4em
	height 4em
	border-radius 50%
	display flex
	align-items center
	justify-content center
	box-shadow 2px 2px 8px rgba(0,0,0,.2)
	color white
	
.contact-add
	background #2ecc71
	
.contact-delete
	position absolute
	bottom 20px
	right 85px
	background #e74c3c

.contact-edit
	position absolute
	bottom 20px
	right 20px
	background #3498db
	
// ====================================================
// ================== Miscellaneous ===================
// ====================================================

.sc-name
	height 45px
	font-size 24px