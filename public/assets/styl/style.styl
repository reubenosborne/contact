// ====================================================
// ================== Panel Header ====================
// ====================================================

.panel-header
	min-height 25px
	width 100%
	background header
	
	display flex
	align-items center
	
	padding 0 5px
	margin 0
	font-size 12px
	color white
	-webkit-font-smoothing antialiased
		

// ====================================================
// ================= Search Contacts ==================
// ====================================================

.search-contacts
	position relative
	min-height 50px
	display flex
	align-items center
	background white
	border-bottom 1px solid lightgrey
	
	input
		width 100%
		height 30px
		padding 0 10px 0 35px
		margin 0 10px
		border 1px solid lightgrey
		border-radius 20px
		transition .5s
		
		&:focus
			outline 0px
			border 1px solid darkgrey

	i
		position absolute
		top 18px
		left 23px

// ====================================================
// =================== Contact Card ===================
// ====================================================

.contact-card
	cursor pointer
	padding 0 5px
	margin 0
	background white
	height 50px
	border-bottom 1px solid lightgrey
	
	display flex
	align-items center
	
	&:hover
		background transparentblack
		
	&:last-of-type
		margin-bottom 80px

// .cc will hereby replace all instances of .contact-card
		
.cc-avatar
	min-width 40px
	height 40px
	border-radius 50%
	margin 0 10px 0 5px
		
.cc-avatar-initials
	background bggrey
	display flex
	align-items center
	justify-content center
	
.cc-avatar-photo
	background no-repeat center center
	background-size cover

.cc-details
	display flex
	flex-direction column

	h3
		font-size 15px
		letter-spacing 1px
		padding 2px 0
		margin 0
	
	p
		padding 0
		margin 0
		font-size 13px
		font-weight 300


// ====================================================
// ================= Contact Buttons ==================
// ====================================================

.contact-control
	width 60px
	height 60px
	border-radius 50%
	display flex
	align-items center
	justify-content center
	color white
	box-shadow: 0px 1px 4px rgba(0,0,0,0.12), 1px 2px 8px rgba(0,0,0,0.24);
	cursor pointer
	
.contact-add
	background green
	transition .1s
	position absolute
	bottom 10px
	left 50%
	margin-left -30px
	
	&:hover
		background darken(green, 10%)
		
	&:active
		background green
		
	
.contact-delete
	position absolute
	bottom 10px
	right 85px
	background red
	transition .1s
	
	&:hover
		background darken(red, 10%)
		
	&:active
		background red
		

.contact-edit
	position absolute
	bottom 10px
	right 20px
	background blue
	transition .1s
	
	&:hover
		background darken(blue, 10%)
		
	&:active
		background blue
		
		
.contact-back
	position absolute
	bottom 10px
	right 150px
	background orange
	transition .1s
	display none
	
	&:hover
		background darken(orange, 10%)
		
	&:active
		background orange
	
// ====================================================
// ================= Info Dialogue ====================
// ====================================================

.info-dialogue
	display flex
	align-items center
	justify-content center
	
	h1
		font-weight 100

// ====================================================
// ================ Selected Contact ==================
// ====================================================

.selected-contact
	margin 0

// .sc will hereby replace .selected-contact

.sc-header
	display flex
	flex-direction row
	align-items center

.sc-field
	height 30px
	display flex
	align-items center
	margin 5px
	
	label
		margin 0
		padding 0 5px
		min-width 120px
		text-align right
		
	span
		padding 3px
		border 2px solid invisible
		
	input
		width 100%
		padding 3px
		
.sc-name
	height 45px
	display flex
	align-items center
	margin 5px
	padding-left 20px
	
	span
		padding 3px
		border 2px solid invisible
		font-size 28px
		font-weight 100
		height 45px
	
	input
		margin 0
		width 100%
		padding 3px
		font-size 28px
		font-weight 100
		height 45px
		position relative
		top 3px
		
.sc-status
	
	span
		padding-left 4px
	
	select
		border 1px solid darkgrey
		background none
		
		
// ====================================================
// ===================== Avatar =======================
// ====================================================

.sc-avatar
	min-width 100px
	min-height 100px
	border-radius 50%
	display flex
	align-items center
	justify-content center
	position relative
	
.sc-avatar-initials
	background bggrey
	font-size 32px
	font-weight 100
	box-shadow inset 0 0 2px 2px rgba(0,0,0,0.08)
	
.sc-avatar-photo
	background no-repeat center center
	background-size cover
	box-shadow inset 0 0 2px 2px rgba(0,0,0,0.08)
	
.sc-avatar-overlay
	position absolute
	top 0
	left 0
	background transparentwhite
	
.avatar-upload
	width 40px
	height 40px
	opacity 0
	position absolute
	top 30px
	left 30px
	cursor pointer
	
.nv-file-over
	border 3px dashed lighten(blue, 20%)
	

