.app-container
	display flex
	flex-direction row
	height 100vh

.panel
	padding .5em

.panel-filters
	background #444
	flex 1
	padding .4em
	
.panel-contacts
	background #DDD
	flex 2
	padding .4em
	overflow scroll
	overflow-x hidden
	
.panel-info
	background #FFF
	flex 3
	padding .4em
	
.contact-card
	cursor pointer
	
	&:hover
		background rgba(255,255,255,.9)

.contact-control
	width 4em
	height 4em
	border-radius 50%
	display flex
	align-items center
	justify-content center
	box-shadow 1px 1px 5px rgba(0,0,0,.2)
	
.contact-delete
	position absolute
	bottom 1em
	right 6em
	background tomato

.contact-edit
	position absolute
	bottom 1em
	right 1em
	background #00FFFF
	