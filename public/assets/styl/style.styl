// Contact Panel
	
.panel-contacts
	flex 1
	min-width 250px
	display flex
	flex-direction column
	border-right 1px solid lightgrey
	position relative
	
	@media ( max-width: 800px) {
		flex 1
	}
	
.panel-contacts-container
	overflow scroll
	overflow-x hidden
	flex 1


// Info Panel

.panel-info
	flex 3
	border-right 1px solid lightgrey
	
	@media ( max-width: 800px) {
		display none
	}

	
.panel-info-container
	padding 20px 30px

// Mobile View
	
@media ( max-width: 800px)
	.contact-selected
		.panel-info
			display block
			
		.panel-contacts
			display none
			
		.contact-back
			display flex

		
	
